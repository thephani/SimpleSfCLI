{
	"name": "simple-sf-cli",
	"version": "1.0.0",
	"description": "A simplified Salesforce CLI plugin",
	"type": "module",
	"main": "dist/index.js",
	"bin": {
		"simpleSfCli": "dist/cli.js"
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc && node dist/cli.js -u test -c yes -k 1234",
		"start": "node dist/cli.js",
		"lint": "eslint src --ext .ts",
		"watch": "tsc -w",
		"prepare": "npm run build",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage"
	},
	"dependencies": {
		"archiver": "^7.0.1",
		"commander": "^11.0.0",
		"fs-extra": "^11.0.0",
		"jsonwebtoken": "^9.0.0",
		"xmlbuilder": "^15.1.1"
	},
	"devDependencies": {
		"@types/archiver": "^6.0.3",
		"@types/fs-extra": "^11.0.0",
		"@types/jest": "^29.5.14",
		"@types/jsonwebtoken": "^9.0.0",
		"@types/node": "^20.17.9",
		"@types/xmlbuilder": "^0.0.35",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"eslint": "^8.0.0",
		"jest": "^29.7.0",
		"ts-jest": "^29.2.5",
		"ts-node": "^10.9.2",
		"typescript": "^5.0.0"
	}
}
